# ==============================================
# Westval Configuration
# ==============================================

# Flask Environment
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-this

# Database Configuration
# Options: mysql, postgresql
DB_TYPE=mysql
DB_HOST=mysql
DB_PORT=3306
DB_NAME=westval
DB_USER=westval_user
DB_PASSWORD=westval_secure_password_2025

# JWT Settings
JWT_ACCESS_TOKEN_EXPIRES_HOURS=8
JWT_REFRESH_TOKEN_EXPIRES_DAYS=30

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# ==============================================
# Active Directory / LDAP Configuration
# ==============================================

# Authentication Type: local, ldap, or ad
AUTH_TYPE=local

# Enable LDAP/AD Authentication
LDAP_ENABLED=false

# LDAP Settings (for standard LDAP)
LDAP_HOST=ldap://ldap.example.com
LDAP_PORT=389
LDAP_USE_SSL=false
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN=ou=users,dc=example,dc=com
LDAP_BIND_USER=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin_password
LDAP_USERNAME_ATTRIBUTE=uid
LDAP_EMAIL_ATTRIBUTE=mail
LDAP_FIRSTNAME_ATTRIBUTE=givenName
LDAP_LASTNAME_ATTRIBUTE=sn
LDAP_GROUP_SEARCH_BASE=ou=groups,dc=example,dc=com

# Active Directory Settings (for Microsoft AD)
AD_DOMAIN=YOURCOMPANY
AD_SERVER=ad.yourcompany.com
AD_SEARCH_BASE=DC=yourcompany,DC=com

# Example for your organization:
# LDAP_ENABLED=true
# AUTH_TYPE=ad
# AD_DOMAIN=MYORG
# AD_SERVER=ad.myorg.com
# AD_SEARCH_BASE=DC=myorg,DC=com
# LDAP_BIND_USER=CN=ServiceAccount,OU=ServiceAccounts,DC=myorg,DC=com
# LDAP_BIND_PASSWORD=your_service_account_password

# ==============================================
# Security & Compliance (21 CFR Part 11)
# ==============================================

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_EXPIRY_DAYS=90

# Session Security
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=3
ACCOUNT_LOCKOUT_DURATION_MINUTES=30

# ==============================================
# Email Configuration (for notifications)
# ==============================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@westval.com

# ==============================================
# File Upload Settings
# ==============================================

UPLOAD_FOLDER=/app/uploads
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# ==============================================
# Redis Configuration
# ==============================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# ==============================================
# AI Integration (Optional)
# ==============================================

OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ==============================================
# Application Settings
# ==============================================

COMPANY_NAME=Your Company Name
SYSTEM_EMAIL=system@yourcompany.com
PAGINATION_PER_PAGE=50

# ==============================================
# Integration Settings (Optional)
# ==============================================

# Jira Integration
JIRA_ENABLED=false
JIRA_URL=https://yourcompany.atlassian.net
JIRA_USERNAME=your-email@company.com
JIRA_API_TOKEN=your-jira-api-token

# Azure DevOps Integration
AZURE_DEVOPS_ENABLED=false
AZURE_DEVOPS_ORG=yourorganization
AZURE_DEVOPS_PROJECT=yourproject
AZURE_DEVOPS_PAT=your-personal-access-token